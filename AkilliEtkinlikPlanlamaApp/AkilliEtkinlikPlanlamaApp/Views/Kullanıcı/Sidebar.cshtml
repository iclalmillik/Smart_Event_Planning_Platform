<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoş Geldiniz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .vertical-navbar {
            height: 100vh; /* Tüm ekran yüksekliğinde */
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
        }

            .vertical-navbar .nav-link {
                color: #495057;
                padding: 10px 20px;
            }

                .vertical-navbar .nav-link:hover {
                    background-color: #e9ecef;
                    color: #000;
                }

                .vertical-navbar .nav-link.active {
                    background-color: #ced4da;
                    font-weight: bold;
                }
    </style>
</head>
<body>

    <div class="d-flex">
        <nav class="vertical-navbar d-flex flex-column p-3">
            <a href="#" class="navbar-brand mb-3">Hoş Geldiniz</a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("profil","Kullanıcı")" class="nav-link active">Profilim</a>
                </li>
             


                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                       Etkinliklerim
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Etkinlik/EtkinlikGoruntule">Etkinlikleri Görüntüle</a></li>
                        <li><a class="dropdown-item" href="/Etkinlik/EtkinlikOlustur">Etkinlik Oluştur</a></li>
                        <li><a class="dropdown-item" href="/Etkinlik/KatildigiEtkinlikler">Katıldığım Etkinlikler</a></li>
                        
                    </ul>
                </div>

                <li class="nav-item">
                    <a href="@Url.Action("Index","Home")" class="nav-link active">Çıkış Yap</a>
                </li>
            </ul>
          
        </nav>
        <!-- Dinamik İçerik -->
        <div class="content p-4 flex-grow-1">
            @RenderBody() <!-- Burada dinamik içeriği göstermek için RenderBody çağrılıyor -->
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

