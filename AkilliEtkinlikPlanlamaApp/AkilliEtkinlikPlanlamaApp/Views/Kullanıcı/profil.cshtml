@model AkilliEtkinlikPlanlamaApp.Models.Entities.Kullanici
@{
    Layout = "~/Views/Kullanıcı/Sidebar.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Profil Fotoğrafı ve Puan -->
        <div class="col-md-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfilFotografiYolu))
            {
                <img src="@Model.ProfilFotografiYolu" alt="Profil Fotoğrafı" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;" class="img-thumbnail mb-3" />
            }
            else
            {
                <div class="img-thumbnail mb-3" style="width: 200px; height: 200px; border-radius: 50%; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                    <span class="text-muted">Fotoğraf Yok</span>
                </div>
            }
            <div class="card shadow-sm p-3 mt-3">
                <h5 class="mb-0">Toplam Puan</h5>
                <h2 class="text-primary font-weight-bold">@ViewBag.Puan</h2>
            </div>
        </div>

        <!-- Kullanıcı Bilgileri -->
        <div class="col-md-9">
            <h2 class="mb-4">Profilim</h2>
            <div class="card p-4 shadow-sm">
                <p><strong>Ad:</strong> @Model.Ad</p>
                <p><strong>Soyad:</strong> @Model.Soyad</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Kullanıcı Adı:</strong> @Model.KullaniciAdi</p>
                <p><strong>Telefon Numarası:</strong> @Model.TelefonNumarasi</p>
                <p><strong>Cinsiyet:</strong> @Model.Cinsiyet</p>
                <p><strong>Konum:</strong> @Model.Konum</p>
                <p><strong>Doğum Tarihi:</strong> @Model.DogumTarihi?.ToShortDateString()</p>
                <p><strong>İlgi Alanı:</strong> @ViewBag.IlgiAlaniAdi</p>
            </div>
            <div class="mt-3">
                <a href="@Url.Action("ProfilGuncelle", "Kullanıcı")" class="btn btn-primary">Profili Güncelle</a>
            </div>
        </div>
    </div>
</div>
