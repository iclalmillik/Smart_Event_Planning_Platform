@{
    ViewData["Title"] = "Kayıt Olunuz";
}

@model AkilliEtkinlikPlanlamaApp.Models.Entities.Kullanici


<!doctype html>
<html lang="tr">
<head>
    <title>Sign Up 01</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h5 class="heading-section">Yeni Hesap Oluştur</h5>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-6">
                    <div class="login-wrap">
                        <form asp-action="Register" method="post" enctype="multipart/form-data" class="signup-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="Ad" class="form-control" placeholder="Ad" required />
                                        <span asp-validation-for="Ad" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="Soyad" class="form-control" placeholder="Soyad" required />
                                        <span asp-validation-for="Soyad" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <input asp-for="Email" class="form-control" placeholder="xxxx@gmail.com" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" required />
                                        <span asp-validation-for="Sifre" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="SifreOnay" type="password" class="form-control" placeholder="Şifre Onayla" required />
                                        <span asp-validation-for="SifreOnay" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <select asp-for="Cinsiyet" class="form-select" aria-label="Gender select example" required>
                                            <option value="">Cinsiyet</option>
                                            <option value="Kadın">Kadın</option>
                                            <option value="Erkek">Erkek</option>
                                            <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                                        </select>
                                        <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="DogumTarihi" type="date" class="form-control" required />
                                        <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required />
                                        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input asp-for="TelefonNumarasi" type="tel" class="form-control" placeholder="(5XX) XXX-XXXX" required />
                                        <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <input asp-for="Konum" class="form-control" placeholder="Adresinizi giriniz" required />
                                        <span asp-validation-for="Konum" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <select asp-for="IlgiAlanlariID" class="form-select" aria-label="Interest select example" required>
                                            <option value="">İlgi Alanları</option>
                                            @foreach (var ilgiAlani in Model.IlgiAlanlari)
                                            {
                                                <option value="@ilgiAlani.ID">@ilgiAlani.IlgiAlaniAdi</option>
                                            }
                                        </select>
                                        <span asp-validation-for="IlgiAlanlariID" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group mb-4">
                                        <label for="ProfilFotografi">Profil Fotoğrafı</label>
                                        <input asp-for="ProfilFotografi" type="file" class="form-control" accept="image/*" />
                                        <span asp-validation-for="ProfilFotografi" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-12">
                                    <div class="form-group d-flex">
                                        <button type="submit" class="btn btn-primary rounded submit p-3">Kayıt Ol</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="w-100 social-wrap">
                            <p class="mt-4">Zaten üye misiniz? <a href="/Home/Index"> Giriş Yap</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
