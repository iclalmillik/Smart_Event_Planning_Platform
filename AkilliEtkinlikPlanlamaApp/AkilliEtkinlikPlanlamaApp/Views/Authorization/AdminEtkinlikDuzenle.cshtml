@{
    Layout = "~/Views/Authorization/AdminSidebar.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@model AkilliEtkinlikPlanlamaApp.Models.Entities.Etkinlikler



<div class="container mt-5">
    <h2 class="text-center mb-4">Etkinlik Düzenle</h2>
    <div class="card shadow-sm p-4">
        <form asp-action="AdminEtkinlikDuzenle" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID" />

            <div class="form-group mb-3">
                <label for="EtkinlikAdi" class="form-label">Etkinlik Adı</label>
                <input asp-for="EtkinlikAdi" class="form-control" />
                <span asp-validation-for="EtkinlikAdi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Aciklama" class="form-label">Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="Tarih" class="form-label">Tarih</label>
                        <input asp-for="Tarih" type="date" class="form-control" />
                        <span asp-validation-for="Tarih" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="Saat" class="form-label">Saat</label>
                        <input asp-for="Saat" type="time" class="form-control" />
                        <span asp-validation-for="Saat" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Konum" class="form-label">Konum</label>
                <input asp-for="Konum" class="form-control" />
                <span asp-validation-for="Konum" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Kategori" class="form-label">Kategori</label>
                <input asp-for="Kategori" class="form-control" />
                <span asp-validation-for="Kategori" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="EtkinlikFoto" class="form-label">Etkinlik Fotoğrafı</label>
                @if (!string.IsNullOrEmpty(Model.EtkinlikFotoYolu))
                {
                    <div class="mb-3">
                        <img src="@Model.EtkinlikFotoYolu" alt="Etkinlik Fotoğrafı" style="width: 200px; height: 150px; object-fit: cover;" class="img-thumbnail" />
                    </div>
                }
                <input asp-for="EtkinlikFoto" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="EtkinlikFoto" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="@Url.Action("AdminEtkinlikListele", "Authorization")" class="btn btn-secondary">Geri</a>
            </div>
        </form>
    </div>
</div>
