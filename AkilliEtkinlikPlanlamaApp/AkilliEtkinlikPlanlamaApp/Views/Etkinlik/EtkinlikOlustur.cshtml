@{
    Layout = "~/Views/Kullanıcı/Sidebar.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@model AkilliEtkinlikPlanlamaApp.Models.Entities.Etkinlikler



<div class="container mt-5">
    <h2>Etkinlik Oluştur</h2>
    <form asp-action="EtkinlikOlustur" method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="form-group">
            <label for="EtkinlikAdi">Etkinlik Adı</label>
            <input asp-for="EtkinlikAdi" class="form-control" placeholder="Etkinlik adı giriniz" />
            <span asp-validation-for="EtkinlikAdi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Aciklama">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control" placeholder="Etkinlik açıklaması giriniz"></textarea>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Tarih">Tarih</label>
            <input asp-for="Tarih" type="date" class="form-control" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Saat">Saat</label>
            <input asp-for="Saat" type="time" class="form-control" />
            <span asp-validation-for="Saat" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Konum">Konum</label>
            <input asp-for="Konum" class="form-control" placeholder="Etkinlik konumu giriniz" />
            <span asp-validation-for="Konum" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Kategori">Kategori</label>
            <select asp-for="Kategori" asp-items="ViewBag.IlgiAlanlari" class="form-select">
                <option value="">Kategori Seçiniz</option>
            </select>
            <span asp-validation-for="Kategori" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="EtkinlikFoto" class="form-label">Etkinlik Fotoğrafı</label>
            <input asp-for="EtkinlikFoto" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="EtkinlikFoto" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary mt-3">Etkinlik Oluştur</button>
    </form>
</div>
